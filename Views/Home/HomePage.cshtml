@model IEnumerable<ReservationInformation>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Reserved By</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Reservation Date</th>
            <th scope="col">Price</th>
            <th scope="col">City</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@Html.DisplayFor(modelItem => item.reservedBy)</th>
            <td>@Html.DisplayFor(modelItem => item.customerName)</td>
            <td>@item.reservationDate.ToString("yyyy-MM-dd")</td>
            <td>@Html.DisplayFor(modelItem => item.price)</td>
            <td>@Html.DisplayFor(modelItem => item.cityName)</td>
            <td>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#moreDetails" onclick="setReservationIformation('@item.imageUrl', '@item.notes', '@item.name', '@item.creationDate')"><span class="glyphicon glyphicon-star"></span>More Details</button>
                <button type="button" class="btn btn-primary"  onclick="location.href = '/Home/updateReservation?reservationID=@item.id'"><span class="glyphicon glyphicon-star"></span>Edit</button>
                <button type="button" onclick="location.href = '/Home/DeleteReservation?reservationID=@item.id'" class="btn btn-primary"><span class="glyphicon glyphicon-star"></span>Delete</button>
            </td>
        </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="moreDetails" tabindex="-1" aria-labelledby="moreDetails" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center" id="propertiesDiv">
                <img width="300"
                     height="235"
                     alt="Picture of Trip"
                     id="image">

                <textarea style="padding-top : 20px" rows="3" cols="40" name="notes" id="notes" disabled></textarea>

                <h6 id="name"></h6>
                <h6 id="creationDate"></h6>
            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
